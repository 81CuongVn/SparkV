    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}