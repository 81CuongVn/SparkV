<body style="background-color: var(--background-color);">
  <div id="top" style="height: 12px;">
    <div class="background"></div>
    
    <%- include("Parts/navagation", {
      name: "Ch1llBlox",
      domainname: "/bot",

      linkname: "Home",
      link: "/home",

      linkname2: "",
      link2: "",

      linkname3: "",
      link3: "",
      
      linkname4: "",
      link4: ""
    }) -%>
  </div>

  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path fill="var(--secondary-color)" fill-opacity="1" d="M0,160L80,176C160,192,320,224,480,213.3C640,203,800,149,960,117.3C1120,85,1280,75,1360,69.3L1440,64L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
  </svg>

  <div style="background-color: var(--background-color);">
    <div style="height: 150px; overflow: hidden;">
    <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
      <path d="M-41.53,-9.56 C167.83,173.98 302.14,-60.89 534.09,89.10 L500.00,0.00 L0.00,0.00 Z" style="stroke: none; fill: var(--secondary-color);"></path>
    </svg>
  </div>
  </div>

  <div style="display: flex; flex-wrap: wrap; justify-content: center;">
    <% user.guilds.forEach((guild) => {
      const GuildPerms = new perms(guild.permissions)

      if (!GuildPerms.has("MANAGE_GUILD")){
        return
      }
    %>
    <div class="card" style="max-width: 18rem; margin: 2rem; min-width: 10em;">
    <%- guild.icon ? `<img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}" class="card-img-top" style="max-width: 18rem;">` : "" %>
      <div class="card-body">
        <h5 class="card-title"><%= guild.name %></h5>
        <p class="card-text">Edit <%= guild.name %>'s settings via the dashboard by clicking the button below.</p>
        <a href="/dashboard/<%- guild.id %>" class="btn btn-success text-white">Edit Settings</a>
      </div>
    </div>
    <%
        });
    %>
  </div>
  
  <div class="footer-dark" style="background: var(--secondary-color); padding-top: 0px; padding-bottom: 0px;">
  <div class="container">
    <div class="row">
      <div class="col item social">
        <a href="/bot/youtube">
          <i class="fab fa-youtube"></i>
        </a>
      </div>
    </div>
