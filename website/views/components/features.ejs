<!-- Features -->
<section class="features">
  <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="100%" height="50px" viewBox="0 0 100 100" preserveAspectRatio="none">
    <path d="M0,0 C16.6666667,66 33.3333333,99 50,99 C66.6666667,99 83.3333333,66 100,0 L100,100 L0,100 L0,0 Z" style="stroke: none; fill: var(--secondary-color);"></path>
  </svg>

    <% Object.entries(features).forEach((feature) => { %>
        <div style="background: var(--secondary-color);">
            <div class="container" style="color: var(--main-color);">
              <br>
              <br>
              <br>
              <br>
              
              <h2 class="text-center aos-init aos-animate" style="color: var(--text-color); font-weight: bold; margin-bottom: 40px; padding-top: 40px;" data-aos="fade-up"><%- feature[1].name %></h2>
            </div>

              <div class="container py-5 text-center">
                <div class="row gap-3 col-12 col-lg-auto me-lg-auto mb-2 justify-content-center text-center">
                    <% Object.entries(feature[1].boxes).forEach((box) => { %>
                      <%- include("layout/featurebox", box[1]) %> 
                    <% }) %>  
                </div>
              </div>
            </div>
          </div>
    <% }) %>

    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 100 100" preserveAspectRatio="none" width="100%" height="50px">
      <path d="M0,0 C16.6666667,66 33.3333333,99 50,99 C66.6666667,99 83.3333333,66 100,0 L100,100 L0,100 L0,0 Z" transform="scale(1, -1) translate(0, -100)" style="stroke: none; fill: var(--secondary-color);"></path>
    </svg>
  </section>