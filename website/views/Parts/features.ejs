<!-- Features -->
<div id="features">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path fill="var(--secondary-color)" fill-opacity="1" d="M0,160L80,176C160,192,320,224,480,213.3C640,203,800,149,960,117.3C1120,85,1280,75,1360,69.3L1440,64L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
    </svg>

    <% Object.entries(features).forEach((feature) => { %>
        <div class="features-boxed" style="background: var(--secondary-color);">
            <div class="container" style="color: var(--main-color);">
              <div class="intro">
              <h2 class="text-center aos-init aos-animate" style="color: var(--text-color)" data-aos="fade-up"><%- feature[1].name %></h2>
            </div>

              <div class="row justify-content-center featurebox">
                <div class="col-sm-col-md-5 col-lg-4 item">
                    <% Object.entries(feature[1].boxes).forEach((box) => { %>
                      <div id="featurebox aos-init aos-animate" class="box" style="border-radius: 34px;" data-aos="fade-up">
                        <a href="<%- box[1].link %>">
                          <img src="<%- box[1].image %>" style="color: var(--main-color);" width="125" height="125" alt="<%- box[1].alt %>"></img>
                            <h3 class="name"><%- box[1].name %></h3>
                          </a>
              
                          <p class="description"><%- box[1].description %></p>
                      </div>
                    <% }) %>
                </div>
              </div>
            </div>
          </div>
    <% }) %>

    <div style="background-color: var(--main-color);">
      <div style="height: 320px; overflow: hidden;">
        <svg viewBox="0 0 500 320" preserveAspectRatio="none" style="height: 100%; width: 100%;">
          <path d="M-41.53,-9.56 C167.83,173.98 302.14,-60.89 534.09,89.10 L500.00,0.00 L0.00,0.00 Z" style="stroke: none; fill: var(--secondary-color);"></path>
        </svg>
      </div>
    </div>
  </div>